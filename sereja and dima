#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    int s=0, d=0;
    vector<int>v;
    int l=0, r=n-1;
    for(int i=0; i<n; i++){
        int x;
        cin>>x;
        v.push_back(x);

}
    for(int i=0; i<n; i++){
        int pick;
        if(v[l]>v[r]){
            pick=v[l];
            l++;
        }
        else{
            pick=v[r];
            r--;
        }
        if(i%2==0){
            s+=pick;
        }
        else{
            d+=pick;
        }
    }
    cout<<s<<" "<<d<<"\n";
}
