#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
    int group=1;
    vector<string>V;
    for(int i=0; i<n; i++){
        string s;
        cin>>s;
        V.push_back(s);
    }
    for(int i=0; i<n-1; i++){
        if(V[i]!=V[i+1]){
            group++;
        }
        
    }
    cout<<group<<"\n";
}
