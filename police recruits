#include<bits/stdc++.h>
using namespace std;
int main(){
int n, p=0, crime=0;
cin>>n;
vector<int>v;
for(int i=0; i<n; i++){
int x;
cin>>x;
v.push_back(x);
}
for(int i=0; i<n; i++){
if(v[i]==-1){
    if(p>0){
        p--;
    }
    else{
        crime++;
    }
}
    if(v[i]>0){
        p+=v[i];
    }

}
cout<<crime<<"\n";
}
